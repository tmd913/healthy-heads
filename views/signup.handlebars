<div class="container" id="formContainer">
        <div class="row">

        <div class="col m6">
            <h1>Sign Up Form</h1>

            <form class="profSignup">
                <div class="input-field">
                    <label for="signup-email">Login Email</label>
                    <input type="email" class="email-input" id="signup-email" name="signup-email">
                </div>
                <div class="input-field">
                    <label for="signup-password">Login Password</label>
                    <input type="password" class="password-input" id="signup-password" name="signup-password">
                </div>

                <div class="input-field">
                    <label for="confirm-signup-password">Confirm Password</label>
                    <input type="password" class="confirm-password-input" id="confirm-signup-password" name="confirm-signup-password">
                </div>

                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    <span class="msg"></span>
                </div>
                <button type="submit" class="waves-effect waves-light btn blue lighten-2">Sign Up</button>
            </form>
            <br/>
                <p>Or log in
                    <a href="/"> here</a>
                </p>
        </div>

        <div class="col m6">
            <img src="/assets/img/head1_splashNoText.png" class="splashLogo">
        </div>
    </div>
    
</div>
